{
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom"
    ],
    "rootDir": "./src",
    "outDir": "./dist",  // Output directory for compiled files
    "module": "CommonJS",  // Specify module code generation
    "target": "ES2022",  // Specify ECMAScript target version
    "esModuleInterop": true,  // Enables compatibility with default imports
    "strict": true,  // Enable all strict type-checking options
    "baseUrl": "./src",
    "paths": {
      "common-utils": ["../common-utils/src/index.ts"]
    },
  },
  "files": ["./src/infra.ts"],
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
